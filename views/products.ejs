<%- include layouts/header.ejs %>

        <div class="page-data">
         <div class="data-btn">
           <button onClick="addUser();">+ Add</button>
         </div>
         <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>Pid</th>
                    <th>productName</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Cid</th>
                    <th width="120px">Action</th>
                </tr>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                <tr>
                    <td><%=(i+1)%></td>
                    <td><%=data[i].pid%></td>
                    <td><%=data[i].productName%></td>
                    <td><%=data[i].description%></td>
                    <td><%=data[i].price%></td>
                    <td><%=data[i].quantity%></td>
                    <td><%=data[i].cid%></td>
                    <td>
                        <a class="a-inside edit" href="../products/edit/<%=data[i].pid%>">Edit</a>
                       
                        <a class="a-inside delete" href="../products/delete/<%=data[i].pid%>">Delete</a>
                       
                    </td>
                </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="3">No user</td>
                 </tr>
            <% } %>
                
                              
                
            </table>
         </div>
        </div>
        
<%- include layouts/footer.ejs %>
